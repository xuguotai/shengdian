<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_gift_root"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="5dp">

        <com.tryine.sdgq.view.CircleImageView
            android:id="@+id/iv_gift_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0SD金豆"
            android:textColor="@color/tuigift_gift_dark_orange"
            android:textSize="10sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_gift_root1"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/give_stroke_radius_5"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="5dp">

            <com.tryine.sdgq.view.CircleImageView
                android:id="@+id/iv_gift_icon1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/tv_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="#333333"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/give_stroke_btn_radius_5"
            android:gravity="center"
            android:text="赠送"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>