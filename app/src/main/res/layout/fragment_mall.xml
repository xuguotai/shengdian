<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="15dp"
            android:src="@mipmap/ic_mall_cart" />

        <LinearLayout
            android:id="@+id/ll_search_page"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_cart"
            android:background="@drawable/shape_edittext_radius17"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/ic_search" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:hint="请输入关键词进行搜索"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="#333333"
                android:textColorHint="#898989"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/sl_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tryine.sdgq.view.banner.BannerViewPager
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_wc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_mall_wc"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="文创"
                    android:textColor="#676767" />

                <TextView
                    android:id="@+id/tv_yq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_mall_yq"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="乐器"
                    android:textColor="#676767" />

                <TextView
                    android:id="@+id/tv_fw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_mall_fw"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="服务"
                    android:textColor="#676767" />

                <TextView
                    android:id="@+id/tv_bh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_mall_bh"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="百货"
                    android:textColor="#676767" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_xp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_mall_xp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_rx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_mall_rx" />

                    <ImageView
                        android:id="@+id/iv_th"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@mipmap/ic_mall_th" />


                </LinearLayout>


            </LinearLayout>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#f6f6f6">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:visibility="gone"
                  android:layout_marginTop="15dp"
                  android:layout_marginRight="10dp"
                  android:background="@mipmap/ic_mall_xlbg"
                  android:orientation="vertical">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15dp"
                      android:layout_marginTop="10dp"
                      android:drawableLeft="@mipmap/ic_mall_sd"
                      android:drawablePadding="3dp"
                      android:text="限量商品"
                      android:textColor="@color/white"
                      android:textSize="17sp" />

                  <HorizontalScrollView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginRight="10dp"
                      android:scrollbars="none">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@color/white"
                          android:orientation="vertical">

                          <androidx.recyclerview.widget.RecyclerView
                              android:id="@+id/rv_xlgoods"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:overScrollMode="never" />

                      </LinearLayout>

                  </HorizontalScrollView>


              </LinearLayout>

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rv_goods"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:overScrollMode="never" />


          </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
