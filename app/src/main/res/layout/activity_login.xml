<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tryine.sdgq.view.MyNestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:background="@mipmap/ic_login_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="510dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shadow_white_bg_10"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/iv_order"
                        android:background="@drawable/shape_edittext_radius5_f5f5f5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:background="@mipmap/ic_login_gr" />

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:background="@null"
                            android:inputType="number"
                            android:hint="请输入您的手机号码"
                            android:textColorHint="#898989"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:layout_toLeftOf="@+id/iv_order"
                        android:background="@drawable/shape_edittext_radius5_f5f5f5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:background="@mipmap/ic_login_mm" />

                        <EditText
                            android:inputType="textPassword"
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:background="@null"
                            android:hint="请输入您的密码"
                            android:textColorHint="#898989"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="25dp"
                        android:background="@mipmap/ic_login_submit"
                        android:gravity="center"
                        android:text="登录"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_wjmm"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="忘记密码"
                            android:textColor="#AF8C7E" />

                        <TextView
                            android:id="@+id/tv_register"
                            android:padding="5dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="立即注册"
                            android:textColor="#AF8C7E" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="80dp"
                            android:layout_height="0.8dp"
                            android:layout_marginRight="15dp"
                            android:background="#D8E2EC" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="社交账号登录"
                            android:textColor="#9AACBD"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="15dp"
                            android:background="#D8E2EC" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_weChat_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:background="@mipmap/ic_login_wx" />

                        <ImageView
                            android:id="@+id/iv_qq_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:background="@mipmap/ic_login_qq" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:layout_marginBottom="20dp">

                        <CheckBox
                            android:id="@+id/cb_checkbox"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:checked="false"
                            android:layout_alignParentRight="true"
                            android:background="@color/transparent"
                            android:button="@drawable/pro_check_bg"
                            android:gravity="center"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我已阅读并同意圣典钢琴"
                            android:textSize="12sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/tv_Service_agreement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="《服务协议》"
                            android:textSize="12sp"
                            android:textColor="#A98678"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="及"
                            android:textSize="12sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/tv_Privacy_policy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="《隐私政策》"
                            android:textSize="12sp"
                            android:textColor="#A98678"/>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


    </com.tryine.sdgq.view.MyNestedScrollView>


</RelativeLayout>