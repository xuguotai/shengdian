<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <com.tryine.sdgq.view.roundImageView.RoundImageView
            android:id="@+id/iv_cover"
            android:layout_width="170dp"
            android:layout_height="110dp"
            app:corner_bottom_left_radius="5dp"
            app:corner_bottom_right_radius="5dp"
            app:corner_top_left_radius="5dp"
            app:corner_top_right_radius="5dp"
            android:scaleType="center" />


        <TextView
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_time"
            android:drawablePadding="3dp"
            android:drawableLeft="@mipmap/ic_video_time_1"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_look"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/ic_looknum"
            android:drawablePadding="3dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

</LinearLayout>
