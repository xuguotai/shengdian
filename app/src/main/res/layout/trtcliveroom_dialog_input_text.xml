<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_outside_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rl_inputdlg_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/trtcliveroom_color_input_dialog_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/barrage_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/barrage_btn"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/trtcliveroom_barrage_slider_off" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/trtcliveroom_color_transparent_black" />

        <EditText
            android:id="@+id/et_input_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="说点什么吧..."
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:maxLength="32"
            android:singleLine="true"
            android:textColor="@color/trtcliveroom_color_black" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/trtcliveroom_color_transparent_black" />

        <LinearLayout
            android:id="@+id/confirm_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp">

            <Button
                android:id="@+id/confrim_btn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="#d4b9ab"
                android:gravity="center"
                android:text="@string/trtcliveroom_send"
                android:textColor="@color/trtcliveroom_color_white" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>