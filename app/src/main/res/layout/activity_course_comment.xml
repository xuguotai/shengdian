<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/bar_title_backwhite" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:text="课程内容"
        android:textColor="#000000"
        android:textSize="17sp" />

    <com.tryine.sdgq.view.StarBarView
        android:id="@+id/sb_lxs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:starCount="5"
        app:starDistance="10dp"
        app:starEmpty="@mipmap/ic_star_empty"
        app:starFill="@mipmap/ic_star_full"
        app:starSize="40dp" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的评分，对我们非常重要哦~"
        android:textSize="15sp"
        android:textColor="#898989"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:text="内容评价"
        android:textColor="#000000"
        android:textSize="17sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/iv_order"
        android:background="@drawable/shape_bg_radius5_ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_marginLeft="15dp"
            android:maxLength="100"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|top"
            android:hint="请输入您的评价内容"
            android:textColorHint="#898989"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="0/100"
            android:textColor="#898989"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:button="@drawable/pro_check_bg"
            android:checked="true"
            android:textStyle="bold"
            android:text="  匿名发布"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_marginRight="25dp"
        android:background="@mipmap/ic_course_submit"
        android:orientation="horizontal">


        <TextView
            android:drawablePadding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="提交评价"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>